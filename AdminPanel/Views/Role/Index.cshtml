@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-2">All Roles</h1>
<hr />
<hr />

@*Inject Partial View RoleForm*@
<Partial name="RoleForm" model="new RoleFormViewModel()" />
@*-------------*@


@if (@Model.Count() > 0)
{
    @*Create Table*@
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(r=>r.Id)</th>
                <th scope="col">@Html.DisplayNameFor(r=>r.Name)</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id" >Edit</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Roles</h2>
    </div>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}