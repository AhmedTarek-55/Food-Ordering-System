@model IReadOnlyList<DeliveryMethodViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Delivery Methods</h1>
<a asp-action="Create" class="btn btn-outline-primary m-2">Add New Delivery Method</a>
@if (Model.Count() > 0)
{
	<div class="container">
		<table class="table table-hover table-striped table-bordered dt-responsive nowrap">
			<thead class="bg-dark text-white text-center">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>Delivery Time</th>
					<th>Price</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.ShortName</td>
						<td>@item.Description</td>
						<td>@item.DeliveryTime</td>
						<td>@item.Price</td>
						<td>
							<div class="d-flex">
								<a class="btn text-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"></i> </a>
								<a class="btn text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}

else
{
	<div class="mt-3 p-3 alert-warning">
		<h2>There is no Delivery Methods exist</h2>
	</div>
}

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}