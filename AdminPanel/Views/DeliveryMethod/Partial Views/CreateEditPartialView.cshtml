@model DeliveryMethodViewModel

<div class="form-group">
	<label asp-for="ShortName" class="col-form-label"></label>
	<input asp-for="ShortName" class="form-control" />
	<span asp-validation-for="ShortName" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Description" class="col-form-label"></label>
	<input asp-for="Description" class="form-control" />
	<span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="DeliveryTime" class="col-form-label"></label>
	<input asp-for="DeliveryTime" class="form-control" />
	<span asp-validation-for="DeliveryTime" class="text-danger"></span>
</div>
<div class="form-group">
	<label asp-for="Price" class="col-form-label"></label>
	<input asp-for="Price" class="form-control" type="number" />
	<span asp-validation-for="Price" class="text-danger"></span>
</div>